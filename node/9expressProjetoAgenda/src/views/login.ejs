<%- include('./includes/head.ejs'); -%>
<%- include('./includes/nav.ejs'); -%>
<section class="container-md m-auto pt-5">
  <div class="row justify-content-center pt-5">
    <div class="col-11 col-sm-11 col-md-11 col-lg-9 my-5">
      <h1 class="text-center fw-semibold">Login</h1>
      <%- include('./includes/messages.ejs'); -%>
    </div>
    <div class="row">
      <div class="col">
        <h4 class="text-center fw-semibold">Faça seu Cadastro</h4>
        <p class="text-center">Não tem conta? preencha o formulário abaixo.</p>
        <form action="/login/register" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="email" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Senha</label>
            <input type="password" class="form-control" name="password" minlength="6" required>
          </div>
          <button type="submit" class="btn btn-primary">Criar conta</button>
        </form>
      </div>
      <div class="col">
        <h4 class="text-center fw-semibold">Entrar no sistema</h4>
        <p class="text-center">Já tem uma conta? faça seu login.</p>
        <form action="/login/login" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="email" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Senha</label>
            <input type="password" class="form-control" name="password" minlength="6" required>
          </div>
          <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
      </div>
    </div>
  </div>
</section>
<%- include('./includes/footer.ejs'); -%>
